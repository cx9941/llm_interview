                "pretrained_moels/Qwen2.5-0.5B",
                "--train_path",
                "data/train.jsonl",
                "--test_path",
                "data/test.jsonl",
                "--output_dir",
                "outputs",
                "--reward_mode",
                "rule"
            ]
        }
